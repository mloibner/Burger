<div class="pageHead">
  <h1>Burgers!</h1>
  <img class="burgerPic" src="/assets/img/burger.jpeg" alt="Picture of a Burger">
</div>


<container class="row burgerLists">
  <div class="uneaten-burger col-md-6">
    <h2>Burgers!</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>



  <div class="devoured-burger col-md-6">
    <h2>Devoured!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>

</container>


<div class="addBurgerForm">
  <h2>Add a Burger</h2>
  <form class="create-form">
  
    <div class="form-group">
      <label for="bu">New Burger:</label>
      <input type="text" id="bu" name="burger_name" placeholder="Add a new burger!">
    </div>
  
    <div class="form-group">
      <label for="devour"></label><br>
      <input type="radio" name="devour" value="1" checked> Devoured!<br>
      <input type="radio" name="devour" value="0"> Uneaten!
    </div>
  
    <button type="submit">Add Burger</button>
  </form>
</div>